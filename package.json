{
  "name": "tsl-lut",
  "author": "Nicolas Giannantonio",
  "version": "0.1.2",
  "type": "module",
  "description": "Apply a LUT texture for color remapping as a post-process in Three.js WebGPU/TSL.",
  "bugs": {
    "url": "https://github.com/nicolas-giannantonio/tsl-lut/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nicolas-giannantonio/tsl-lut.git"
  },
  "homepage": "https://github.com/nicolas-giannantonio/tsl-lut",
  "keywords": [
    "three",
    "tsl",
    "webgpu",
    "lut",
    "postprocessing"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run types",
    "preview": "vite preview",
    "types": "tsc -p tsconfig.types.json"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/three": "^0.180.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.0"
  },
  "peerDependencies": {
    "three": "^0.180.0"
  }
}
